<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("HostComponents.FactsHostComponent.FactsHostComponent")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import Data.DataModel;
			
		]]>
	</fx:Script>
	
	<s:HGroup>
		<!--requireSelection="true"-->
		<!-- First VGrop column-->
		<s:VGroup>
			<s:HGroup verticalAlign="middle">
				<s:Label text="Character"/>
				<s:DropDownList id="mCharacterList"
								labelField="name"
								width="300"
								dataProvider="{hostComponent.mAgents}"/>				
			</s:HGroup>
			<s:HGroup verticalAlign="middle" width="100%">
				<s:Label width="54" text="Affinity"/>
				<s:TextInput id="mAffinity"
							 maxChars="3"
							 restrict="0-9"
							 width="50"
							 text="0"
							 enabled="{mCharacterList.selectedItem}"/>
				<s:HGroup width="100%" horizontalAlign="right">
					<s:Label text="Nerve"
							 left="350"/>	
				</s:HGroup>
				
				<s:HGroup width="100%"
						  horizontalAlign="right">
					<s:TextInput id="mNerve"
								 maxChars="3"
								 restrict="0-9"
								 width="50"
								 text="0"
								 enabled="{mCharacterList.selectedItem}"/>
				</s:HGroup>
				
			</s:HGroup>
			<s:HGroup width="357" verticalAlign="middle">
				<s:Label text="Memory"/>
				<s:HGroup width="100%" horizontalAlign="right">
					<s:Button id="mAddVariable"
							  label="+Variable"/>
					<s:Button id="mDeleteVariable"
							  label="-Variable"
							  enabled="{mVariableList.selectedItem}"/>	
				</s:HGroup>
				
			</s:HGroup>
			<s:Panel title="Memory">
				<s:DataGrid id="mVariableList" 
							width="358" 
							borderVisible="true"
							dataProvider="{hostComponent.mVariableItems}" 
							editable="true"
							resizableColumns="false" 
							selectionMode="multipleRows"
							sortableColumns="true"
							requestedRowCount="3">
					<s:columns>
						<s:ArrayList>
							<s:GridColumn dataField="id" headerText="Variable"/>
							<s:GridColumn dataField="description" headerText="Value"/>
						</s:ArrayList>
					</s:columns>	
				</s:DataGrid>	
			</s:Panel>
			
			<!--<s:Label text="Character facts"/>-->
			<!--<s:HGroup verticalAlign="middle">-->
				<s:Panel title="Character facts">
					<s:DataGrid id="mCharacterFactsList"
								width="355" 
								borderVisible="true"
								dataProvider="{hostComponent.mCharacterFactItems}" 
								editable="true"
								resizableColumns="false" 
								selectionMode="multipleRows"
								sortableColumns="true"
								requestedRowCount="3" rowHeight="25">
						<s:columns>
							<s:ArrayList>
								<s:GridColumn dataField="id" headerText="id"/>
								<s:GridColumn dataField="description" headerText="Description"/>
								<s:GridColumn dataField="status" headerText="Status"/>
							</s:ArrayList>
						</s:columns>
					</s:DataGrid>
				</s:Panel>				
			<!--</s:HGroup>-->			
		</s:VGroup>
		<!---->
	
		<!-- Secod VGroup column-->
		<s:VGroup verticalAlign="bottom" height="295" bottom="15">
			<s:Button id="mAddFactOwner"
					  label="&lt;" 
					  width="35"
					  height="35"
					  enabled="{mFactsList.selectedItem}"/>
			<s:Button id="mDeleteFactOwner"
					  label="&gt;"
					  width="35"
					  height="35"
					  enabled="{mCharacterFactsList.selectedItem}"/>
		</s:VGroup>		
		<!---->
		
		<s:HGroup height="100%">
			<s:HGroup height="100%">
				<s:VGroup height="100%">
					<s:Label text="Location"/>
					<s:DropDownList id="mLocationList"
									minWidth="300"
									maxWidth="300"
									labelField="name"
									dataProvider="{hostComponent.mLocations}"/>
					<s:HGroup width="100%" horizontalAlign="right">
						<s:Button id="mAddFact"
								  label="+Fact"/>
						<s:Button id="mDeleteFact"
								  label="-Fact"
								  enabled="{mFactsList.selectedItem}"/>	
					</s:HGroup>
					<!--<s:Label text="Facts"/>-->
					<s:Panel title="Facts" height="100%">
						<s:DataGrid id="mFactsList" 
									minWidth="300" 
									maxWidth="300" 
									height="100%"
									borderVisible="true"
									dataProvider="{hostComponent.mSystemFacts}" 
									editable="true"
									resizableColumns="false" 
									selectionMode="multipleRows"
									sortableColumns="true"
									requestedRowCount="9"
									rowHeight="25">
							<s:columns>
								<s:ArrayList>
									<s:GridColumn dataField="id" headerText="id" width="50"/>
									<s:GridColumn dataField="description" headerText="Description"/>
								</s:ArrayList>
							</s:columns>
						</s:DataGrid>	
					</s:Panel>
				</s:VGroup>
			</s:HGroup>
		</s:HGroup>
		<s:VGroup height="100%" paddingTop="73">
			<s:Panel title="Items" height="100%">
				<s:DataGrid id="mItemsGrid"
							height="100%"
							resizableColumns="false"
							editable="true"
							selectionMode="multipleRows"
							sortableColumns="true"
							requestedRowCount="8"
							dataProvider="{DataModel.getSingleton().mAgentsList}">
					<s:columns>
						<s:ArrayList>
							<s:GridColumn dataField="name"  headerText="Type">
								<s:itemRenderer>
									<fx:Component>
										<s:GridItemRenderer>
											<fx:Script>
												<![CDATA[
													import Data.DataModel;
												]]>
											</fx:Script>
											<s:ComboBoxGridItemEditor dataProvider="{DataModel.getSingleton().mAgentsList}"/>
										</s:GridItemRenderer>
									</fx:Component>
								</s:itemRenderer>
							</s:GridColumn>
							<s:GridColumn dataField="name" headerText="Owner">
								<s:itemRenderer>
									<fx:Component>
										<s:GridItemRenderer>
											<fx:Script>
												<![CDATA[
													import Data.DataModel;
												]]>
											</fx:Script>
											<s:ComboBoxGridItemEditor dataProvider="{DataModel.getSingleton().mAgentsList}"/>
										</s:GridItemRenderer>
									</fx:Component>
								</s:itemRenderer>
							</s:GridColumn>
							<s:GridColumn dataField="name" headerText="Number" width="100">
								<s:itemRenderer>
									<fx:Component>
										<s:GridItemRenderer>
											<s:TextInput restrict="0-9"/>
										</s:GridItemRenderer>
									</fx:Component>
								</s:itemRenderer>
							</s:GridColumn>
						</s:ArrayList>
					</s:columns>
				</s:DataGrid>
			</s:Panel>
			<s:HGroup width="100%" horizontalAlign="left">
				<s:Button id="mAddItem" label="+Item"/>
				<s:Button id="mDeleteItem" label="-Label"/>
			</s:HGroup>
		</s:VGroup>
		
	</s:HGroup>
</s:Skin>
