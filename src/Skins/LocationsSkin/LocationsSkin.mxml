		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("HostComponents.LocationsHostComponent.LocationsHostComponent")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[			
		]]>
	</fx:Script>
	<s:HGroup width="100%">
		<s:VGroup>
			<s:DropDownList id="mLocationsList"
							labelField="label"
							width="300"
							prompt="Select location"/>
			<!--draw visual connection-->
		</s:VGroup>
		<s:VGroup>
			<s:Label text="Name:"/>
			<s:TextInput id="mLocationNameField"
						 editable="true" 
						 selectable="true"/>		
			<s:Label text="Description:"/>
			<s:TextInput id="mLocationDescriptionField"/>
		</s:VGroup>
		<s:VGroup>
			 <s:Label text="Agents:"/>
			 <s:List id="mAgentsList"
					 minWidth="300"
					 maxWidth="300"
					 minHeight="300"
					 maxHeight="300"/>	
